@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
    ViewData["HideLayout"] = true;
}

<div class="card max-w-3xl w-full mx-auto overflow-hidden animate-fade-in">
    <div class="p-8">
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-secondary-900 mb-2">Welcome Back</h1>
            <p class="text-secondary-500">Login to your account to continue</p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
            <!-- Login Form -->
            <div class="md:border-r border-secondary-100 md:pr-8">
                <h2 class="text-xl font-bold text-secondary-900 mb-4">Login</h2>
                <div class="space-y-4">
                    <div>
                        <label for="username" class="form-label">Email Address</label>
                        <input id="username" type="email" class="form-input" placeholder="Your email" required>
                    </div>
                    <div>
                        <label for="password" class="form-label">Password</label>
                        <input id="password" type="password" class="form-input" placeholder="Your password" required>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" id="remember" class="h-4 w-4 rounded border-secondary-300 text-primary focus:ring-primary">
                            <label for="remember" class="ml-2 text-sm text-secondary-700">Remember me</label>
                        </div>
                        <a href="#" class="text-sm text-primary hover:underline">Forgot password?</a>
                    </div>
                    <button id="login-btn" class="btn btn-primary w-full">Login</button>
                </div>
                
                <!-- Social Login Options -->
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-secondary-200"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-secondary-500">Or continue with</span>
                        </div>
                    </div>
                    <div class="mt-6 grid grid-cols-2 gap-3">
                        <button type="button" class="flex justify-center items-center py-2 px-4 border border-secondary-200 rounded-lg text-sm font-medium text-secondary-700 hover:bg-secondary-50">
                            <i class="bi bi-google mr-2"></i>
                            Google
                        </button>
                        <button type="button" class="flex justify-center items-center py-2 px-4 border border-secondary-200 rounded-lg text-sm font-medium text-secondary-700 hover:bg-secondary-50">
                            <i class="bi bi-facebook mr-2"></i>
                            Facebook
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Registration CTA -->
            <div class="flex flex-col justify-center">
                <h2 class="text-xl font-bold text-secondary-900 mb-4">New Customer?</h2>
                <p class="text-secondary-500 mb-6">Create an account to enjoy a personalized shopping experience, track orders, and more.</p>
                <a href="/Home/Signup" class="btn btn-outline">Create Account</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
<script src="/js/login.js"></script>