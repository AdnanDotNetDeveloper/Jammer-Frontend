<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jammer</title>
    <link rel="stylesheet" href="/css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/dist/output-scss.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/assets/css/magnific-popup.css" />
    <link rel="stylesheet" href="/css/modern-style.css" />
    <link rel="stylesheet" href="/dist/output-tailwind.css" />
    <script src="https://unpkg.com/phosphor-icons"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Animation Library -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>
<body class="bg-surface min-h-screen flex flex-col">
    <!-- Announcement Bar -->
    <div class="bg-primary-900 text-white py-2 text-center text-sm font-medium">
        <div class="container mx-auto px-4">
            New customers save 10% with the code <span class="font-bold">GET10</span>
        </div>
    </div>

    <!-- Header -->
    <header id="top-nav" class="bg-white py-4 shadow-soft sticky top-0 z-50">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between">
                <!-- Mobile menu button -->
                <button type="button" id="mobile-menu-button" class="lg:hidden text-secondary-900 hover:text-primary">
                    <i class="bi bi-list text-2xl"></i>
                </button>

                <!-- Logo -->
                <a href="/" class="text-2xl font-bold text-primary">Jammer</a>

                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center space-x-8">
                    <a href="/" class="nav-link py-2">Home</a>
                    <a href="/Home/About" class="nav-link py-2">About</a>
                    <a href="/Home/Contact" class="nav-link py-2">Contact</a>
                    <a href="/Home/Blog" class="nav-link py-2">Blog</a>
                </nav>

                <!-- User Actions -->
                <div class="flex items-center space-x-5">
                    <!-- Search -->
                    <button type="button" id="search-button" class="text-secondary-500 hover:text-primary transition-colors">
                        <i class="bi bi-search text-xl"></i>
                    </button>

                    <!-- User Account -->
                    <div class="relative" id="account-dropdown">
                        <button type="button" id="main-user-icon" class="text-secondary-500 hover:text-primary transition-colors">
                            <i class="bi bi-person-circle text-xl"></i>
                        </button>
                        <div id="account-dropdown-menu" class="hidden absolute right-0 mt-2 w-48 rounded-lg bg-white shadow-medium py-2 z-10">
                            <a href="/Home/Login" id="login" class="block px-4 py-2 text-sm text-secondary-700 hover:bg-primary-50 hover:text-primary">Login</a>
                            <a href="/Home/Signup" id="signup" class="block px-4 py-2 text-sm text-secondary-700 hover:bg-primary-50 hover:text-primary">Register</a>
                            <a href="/Home/Account" class="block px-4 py-2 text-sm text-secondary-700 hover:bg-primary-50 hover:text-primary">My Account</a>
                        </div>
                    </div>

                    <!-- User Actions when logged in -->
                    <div id="account-icons" class="hidden items-center space-x-4">
                        <a href="/Home/Account" class="text-secondary-500 hover:text-primary transition-colors">
                            <i class="bi bi-person text-xl"></i>
                        </a>
                        <a href="/Home/Wishlist" class="text-secondary-500 hover:text-primary transition-colors">
                            <i id="to-wishlist" class="bi bi-heart text-xl"></i>
                        </a>
                        <a href="/Home/Cart" class="text-secondary-500 hover:text-primary transition-colors relative">
                            <i id="to-cart" class="bi bi-bag text-xl"></i>
                            <span id="cart-count" class="absolute -top-1 -right-1 bg-primary text-white text-xs rounded-full h-4 w-4 flex items-center justify-center">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
        <div class="bg-white h-full w-64 shadow-hard transform transition-transform duration-300 ease-in-out -translate-x-full">
            <div class="flex justify-between items-center p-4 border-b border-secondary-100">
                <span class="text-xl font-bold text-primary">Menu</span>
                <button id="close-mobile-menu" class="text-secondary-500 hover:text-primary">
                    <i class="bi bi-x text-xl"></i>
                </button>
            </div>
            <nav class="p-4">
                <a href="/" class="block py-2 text-secondary-700 hover:text-primary">Home</a>
                <a href="/Home/About" class="block py-2 text-secondary-700 hover:text-primary">About</a>
                <a href="/Home/Contact" class="block py-2 text-secondary-700 hover:text-primary">Contact</a>
                <a href="/Home/Blog" class="block py-2 text-secondary-700 hover:text-primary">Blog</a>
                <div class="border-t border-secondary-100 my-2 pt-2">
                    <a href="/Home/Login" class="block py-2 text-secondary-700 hover:text-primary">Login</a>
                    <a href="/Home/Signup" class="block py-2 text-secondary-700 hover:text-primary">Register</a>
                    <a href="/Home/Account" class="block py-2 text-secondary-700 hover:text-primary">My Account</a>
                    <a href="/Home/Wishlist" class="block py-2 text-secondary-700 hover:text-primary">Wishlist</a>
                    <a href="/Home/Cart" class="block py-2 text-secondary-700 hover:text-primary">Cart</a>
                </div>
            </nav>
        </div>
    </div>

    <!-- Search Modal -->
    <div id="search-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
        <div class="bg-white rounded-xl p-6 max-w-2xl w-full mx-4 animate-fade-in">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold">Search</h3>
                <button id="close-search" class="text-secondary-500 hover:text-primary">
                    <i class="bi bi-x text-xl"></i>
                </button>
            </div>
            <form action="/Home/Search" method="get">
                <div class="relative">
                    <input type="text" name="q" placeholder="What are you looking for?" class="form-control pl-10" autocomplete="off">
                    <i class="bi bi-search text-secondary-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
                </div>
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-secondary-900 text-white pt-12 pb-6">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- About -->
                <div>
                    <h4 class="text-xl font-bold mb-4">Jammer</h4>
                    <p class="text-white mb-4">Your one-stop shop for all your tech needs.</p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-white hover:text-primary transition-colors">
                            <i class="bi bi-facebook text-xl"></i>
                        </a>
                        <a href="#" class="text-white hover:text-primary transition-colors">
                            <i class="bi bi-instagram text-xl"></i>
                        </a>
                        <a href="#" class="text-white hover:text-primary transition-colors">
                            <i class="bi bi-twitter-x text-xl"></i>
                        </a>
                        <a href="#" class="text-white hover:text-primary transition-colors">
                            <i class="bi bi-youtube text-xl"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="text-xl font-bold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-white hover:text-primary transition-colors">Home</a></li>
                        <li><a href="/Home/About" class="text-white hover:text-primary transition-colors">About Us</a></li>
                        <li><a href="/Home/Contact" class="text-white hover:text-primary transition-colors">Contact</a></li>
                        <li><a href="/Home/Blog" class="text-white hover:text-primary transition-colors">Blog</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div>
                    <h4 class="text-xl font-bold mb-4">Customer Service</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-white hover:text-primary transition-colors">FAQ</a></li>
                        <li><a href="#" class="text-white hover:text-primary transition-colors">Shipping Policy</a></li>
                        <li><a href="#" class="text-white hover:text-primary transition-colors">Returns & Refunds</a></li>
                        <li><a href="#" class="text-white hover:text-primary transition-colors">Privacy Policy</a></li>
                        <li><a href="#" class="text-white hover:text-primary transition-colors">Terms & Conditions</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div>
                    <h4 class="text-xl font-bold mb-4">Newsletter</h4>
                    <p class="text-white mb-4">Subscribe to our newsletter for the latest updates and offers.</p>
                    <form class="flex">
                        <input type="email" placeholder="Your email" class="rounded-l-lg py-2 px-3 w-full focus:outline-none text-secondary-900">
                        <button type="submit" class="bg-primary text-white rounded-r-lg px-4 hover:bg-primary-600 transition-colors">
                            <i class="bi bi-send"></i>
                        </button>
                    </form>
                </div>
            </div>
            
            <div class="border-t border-secondary-700 mt-8 pt-6 text-center text-white">
                <p>&copy; @DateTime.Now.Year Jammer. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bottom Mobile Navigation Bar -->
    <div class="lg:hidden fixed bottom-0 left-0 right-0 bg-white shadow-medium border-t border-secondary-100 z-40">
        <div class="grid grid-cols-4">
            <a href="/" class="flex flex-col items-center py-2 text-secondary-500 hover:text-primary">
                <i class="bi bi-house text-xl"></i>
                <span class="text-xs mt-1">Home</span>
            </a>
            <a href="/Home/Category?id=26" class="flex flex-col items-center py-2 text-secondary-500 hover:text-primary">
                <i class="bi bi-grid text-xl"></i>
                <span class="text-xs mt-1">Categories</span>
            </a>
            <a href="/Home/Search" class="flex flex-col items-center py-2 text-secondary-500 hover:text-primary">
                <i class="bi bi-search text-xl"></i>
                <span class="text-xs mt-1">Search</span>
            </a>
            <a href="/Home/Cart" class="flex flex-col items-center py-2 text-secondary-500 hover:text-primary">
                <i class="bi bi-bag text-xl"></i>
                <span class="text-xs mt-1">Cart</span>
            </a>
        </div>
    </div>

    <!-- Popup message -->
    <div id="popup-message" class="fixed bg-success text-white p-4 rounded-lg hidden z-50 shadow-lg"></div>

    <!-- Scroll to top button -->
    <a class="scroll-to-top-btn" href="#top-nav">
        <i class="bi bi-chevron-up"></i>
    </a>

    <!-- Cookie consent banner -->
    <div id="cookie-consent" class="fixed bottom-0 left-0 w-full bg-neutral py-4 z-50 transform translate-y-full transition-transform duration-500">
        <div class="container mx-auto flex flex-col md:flex-row items-center justify-between gap-4 px-4">
            <p class="text-white text-sm">We use cookies to enhance your experience. By continuing to visit this site you agree to our use of cookies.</p>
            <div class="flex gap-3">
                <button id="accept-cookies" class="button-main bg-primary">Accept</button>
                <button id="decline-cookies" class="button-outline text-white border-white">Decline</button>
            </div>
        </div>
    </div>

    <!-- Loading overlay -->
    <div id="loading-overlay" class="fixed inset-0 bg-neutral bg-opacity-80 z-[9999] flex items-center justify-center hidden">
        <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-primary"></div>
    </div>

    <!-- Scripts -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/swiper-bundle.min.js"></script>
    <script src="/assets/js/magnific-popup.min.js"></script>
    <script src="/assets/js/slick.min.js"></script>
    <script src="/assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
    
    <!-- Animation Library -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    
    <!-- Modern UI Interactions -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize AOS
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: false,
                mirror: true,
                anchorPlacement: 'top-bottom'
            });
            
            // Mobile menu toggle
            document.getElementById('mobile-menu-button')?.addEventListener('click', function() {
                document.getElementById('mobile-menu').classList.remove('hidden');
                document.querySelector('#mobile-menu > div').classList.add('translate-x-0');
                document.querySelector('#mobile-menu > div').classList.remove('-translate-x-full');
            });
            
            document.getElementById('close-mobile-menu')?.addEventListener('click', function() {
                document.querySelector('#mobile-menu > div').classList.remove('translate-x-0');
                document.querySelector('#mobile-menu > div').classList.add('-translate-x-full');
                setTimeout(function() {
                    document.getElementById('mobile-menu').classList.add('hidden');
                }, 300);
            });
            
            // Account dropdown toggle
            document.getElementById('account-dropdown')?.addEventListener('click', function(e) {
                document.getElementById('account-dropdown-menu').classList.toggle('hidden');
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!document.getElementById('account-dropdown')?.contains(e.target)) {
                    document.getElementById('account-dropdown-menu')?.classList.add('hidden');
                }
            });
            
            // Search modal toggle
            document.getElementById('search-button')?.addEventListener('click', function() {
                document.getElementById('search-modal').classList.remove('hidden');
            });
            
            document.getElementById('close-search')?.addEventListener('click', function() {
                document.getElementById('search-modal').classList.add('hidden');
            });

            // Update cart count
            function updateCartCount() {
                const cartItems = JSON.parse(localStorage.getItem('cartItems')) || [];
                const cartCountElement = document.getElementById('cart-count');
                if (cartCountElement) {
                    cartCountElement.textContent = cartItems.length;
                }
            }
            
            // Update auth UI
            function updateAuthUI() {
                const token = Cookies.get('Token');
                const accountIcons = document.getElementById('account-icons');
                const mainUserIcon = document.getElementById('main-user-icon');
                
                if (!token) {
                    if (accountIcons) accountIcons.style.display = "none";
                    if (mainUserIcon) mainUserIcon.style.display = "flex";
                } else {
                    if (accountIcons) accountIcons.style.display = "flex";
                    if (mainUserIcon) mainUserIcon.style.display = "none";
                }
            }
            
            // Cookie consent
            setTimeout(() => {
                const cookieConsent = document.getElementById('cookie-consent');
                if (cookieConsent && !Cookies.get('cookie-consent')) {
                    cookieConsent.classList.remove('translate-y-full');
                }
            }, 2000);
            
            document.getElementById('accept-cookies')?.addEventListener('click', function() {
                Cookies.set('cookie-consent', 'accepted', { expires: 365 });
                document.getElementById('cookie-consent').classList.add('translate-y-full');
            });
            
            document.getElementById('decline-cookies')?.addEventListener('click', function() {
                Cookies.set('cookie-consent', 'declined', { expires: 7 });
                document.getElementById('cookie-consent').classList.add('translate-y-full');
            });
            
            // Initialize the page
            updateCartCount();
            updateAuthUI();
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
